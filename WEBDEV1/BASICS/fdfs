    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // --- DOM Elements ---
            const generateBtn = document.getElementById('generate-btn');
            const productInput = document.getElementById('product-input');
            const resultsContainer = document.getElementById('results-container');
            const pointsDisplay = document.getElementById('points-display');

            // --- App State ---
            let currentPoints = 35; // Starting points from the "Pro" plan

            // --- Event Listeners ---
            generateBtn.addEventListener('click', generateIdeas);

            // --- Functions ---
            function generateIdeas() {
                const product = productInput.value.trim();
                if (!product) {
                    alert('Please enter a product description!');
                    return;
                }

                if (currentPoints <= 0) {
                    alert('You are out of points! Please upgrade your plan.');
                    return;
                }

                // 1. Deduct points and update UI
                currentPoints -= 1;
                updatePoints();
                
                // 2. Disable button and show loading state
                toggleLoadingState(true);

                // 3. Simulate API call to the AI backend (2 seconds)
                setTimeout(() => {
                    // 4. Get mock data and display it
                    const ideas = getMockIdeas(product);
                    displayIdeas(ideas);

                    // 5. Re-enable button and clear loading state
                    toggleLoadingState(false);
                    productInput.value = ''; // Clear input for next use
                }, 2000);
            }

            function updatePoints() {
                pointsDisplay.textContent = currentPoints;
            }

            function toggleLoadingState(isLoading) {
                if (isLoading) {
                    generateBtn.disabled = true;
                    generateBtn.textContent = 'Generating...';
                    resultsContainer.innerHTML = `<div class="loader">ðŸ§  Analyzing trends for you...</div>`;
                } else {
                    generateBtn.disabled = false;
                    generateBtn.textContent = 'Generate Idea (-1 Point)';
                }
            }

            function displayIdeas(ideas) {
                // Clear previous results or placeholder
                resultsContainer.innerHTML = '';
                
                ideas.forEach(idea => {
                    const card = document.createElement('div');
                    card.className = 'idea-card';
                    card.innerHTML = `
                        <div class="idea-card-header">
                            <span class="trend-badge">${idea.trendType}</span>
                            <h3>${idea.title}</h3>
                        </div>
                        <p>${idea.description}</p>
                        <div class="idea-card-actions">
                            <button class="primary">Generate Video with VEO3 (-5)</button>
                            <button>Use Template (-2)</button>
                        </div>
                    `;
                    resultsContainer.appendChild(card);
                });
            }

            /**
             * This function simulates the real AI backend.
             * In a real app, this would be an API call that returns dynamic, real-time ideas.
             */
            function getMockIdeas(product) {
                return [
                    {
                        trendType: 'Montage',
                        title: `Quick-Cut Style Showcase`,
                        description: `Create a fast-paced montage of different people wearing the "${product}" in various settings (city, park, cafÃ©). Use the trending fast-paced audio to keep engagement high.`
                    },
                    {
                        trendType: 'GRWM',
                        title: `Get Ready With Me: Weekend Edition`,
                        description: `Film a "Get Ready With Me" video where the creator builds an entire outfit around your "${product}", explaining why it's the perfect centerpiece for their weekend look.`
                    },
                    {
                        trendType: 'Subculture Content',
                        title: `#ThriftTok Transformation`,
                        description: `Showcase the versatility of your "${product}" in a video tailored for the #ThriftTok or #Streetwear community. Highlight unique details and styling options that appeal to that niche.`
                    }
                ];
            }
        });
    </script>
